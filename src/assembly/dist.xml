<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.1 https://maven.apache.org/xsd/assembly-2.1.1.xsd">
    <id>dist</id>
    <formats>
        <format>zip</format>
    </formats>

    <!-- Reproducibility: avoid machine-specific base dir name -->
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <!-- 1) Javadoc generated by maven-javadoc-plugin -->
        <fileSet>
            <directory>${project.build.directory}/site/apidocs</directory>
            <outputDirectory>/docs/apidocs</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
            <useDefaultExcludes>true</useDefaultExcludes>
        </fileSet>

        <!-- 2) Release notes for a specific version (default: 1.0.0) -->
        <fileSet>
            <directory>${project.basedir}/release-notes/v${notes.version}</directory>
            <outputDirectory>/docs/release-notes</outputDirectory>
            <fileMode>0644</fileMode>
            <directoryMode>0755</directoryMode>
            <useDefaultExcludes>true</useDefaultExcludes>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
